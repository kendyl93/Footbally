{
  "name": "footbally",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:server": "cd server && npm run start",
    "start": "npm run start:server",
    "install:server": "cd server && npm install",
    "postinstall": "run-p install:*",
    "test:server:watch": "cd server && npm run test:watch",
    "test:server": "cd server && npm run test",
    "test": "npm run test:server",
    "test:watch": "npm run test:server:watch",
    "format": "prettier --check \"./server/**/*.js\"",
    "format:fix": "prettier --write \"./server/**/*.js\"",
    "lint": "eslint server --ext \".js\"",
    "lint:fix": "eslint --fix --ext \".js\" server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "server/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5"
  }
}
