{
  "name": "flashCards",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cd src && nodemon --exec babel-node app.js",
    "test:watch": "cd src && jest --watch",
    "test": "npx mocha --config .mocharc.js  test/scenarios/*",
    "format": "prettier --check \"./src/**/*.js\"",
    "format:fix": "prettier --write \"./src/**/*.js\"",
    "lint": "eslint src --ext \".js\"",
    "lint:fix": "eslint --fix --ext \".js\" src"
  },
  "test": "jest",
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "helper.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.7",
    "@babel/core": "^7.12.7",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/register": "^7.12.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.1.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.13",
    "mocha": "^8.2.1",
    "node-mongodb-fixtures": "^3.2.8",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "~4.13.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.5",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "superagent": "^6.1.0"
  }
}
