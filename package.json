{
  "name": "footbally",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cd src && npm run start",
    "install:server": "cd src && npm install",
    "postinstall": "npm run install:server",
    "test:watch": "cd src && npm run test:watch",
    "test": "cd src && npm run test",
    "format": "prettier --check \"./src/**/*.js\"",
    "format:fix": "prettier --write \"./src/**/*.js\"",
    "lint": "eslint src --ext \".js\"",
    "lint:fix": "eslint --fix --ext \".js\" src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
